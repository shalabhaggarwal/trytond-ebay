<tryton>
    <data>

        <record model="ir.ui.view" id="ebay_seller_account_view_form">
            <field name="model">ebay.seller.account</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <![CDATA[
                    <form string="eBay Seller Account">
                        <label name="name" />
                        <field name="name" />
                        <label name="company" />
                        <field name="company" />
                        <notebook>
                            <page string="Account Details" id="details">
                                <label name="app_id" />
                                <field name="app_id" />
                                <label name="dev_id" />
                                <field name="dev_id" />
                                <label name="cert_id" />
                                <field name="cert_id" />
                                <label name="is_sandbox" />
                                <field name="is_sandbox" />
                                <label name="listing_country" />
                                <field name="listing_country" />
                                <newline/>
                                <label name="token" />
                                <field name="token" colspan="3" />
                            </page>
                            <page string="Other Settings" id="settings">
                                <label name="default_account_expense" />
                                <field name="default_account_expense" />
                                <label name="default_account_revenue" />
                                <field name="default_account_revenue" />
                                <label name="default_uom" />
                                <field name="default_uom" />
                                <label name="paypal_email_address"/>
                                <field name="paypal_email_address"/>
                                <newline/>
                                <separator string="Order Settings" id="order_settings" colspan="4"/>
                                <label name="last_order_import_time"/>
                                <field name="last_order_import_time"/>
                            </page>
                        </notebook>
                        <button string="Check Token Status" name="check_token_status" colspan="4"/>
                        <button string="Import Orders" name="import_orders"
                                colspan="2"/>
                        <button string="Export Inventory Status" name="export_catalog_inventory"
                                colspan="2"/>
                        <button string="Export Catalog" name="export_catalog"
                                colspan="2"/>
                    </form>
                ]]>
            </field>
        </record>
        <record model="ir.ui.view" id="ebay_seller_account_view_tree">
            <field name="model">ebay.seller.account</field>
            <field name="type">tree</field>
            <field name="arch" type="xml">
                <![CDATA[
                    <tree string="eBay Seller Accounts">
                        <field name="name" />
                        <field name="company" />
                        <field name="app_id" />
                    </tree>
                ]]>
            </field>
        </record>

        <record model="ir.action.act_window" id="act_ebay_seller_account_form">
            <field name="name">eBay Seller Accounts</field>
            <field name="res_model">ebay.seller.account</field>
        </record>
        <record model="ir.action.act_window.view"
                id="act_ebay_seller_account_view1">
            <field name="sequence" eval="20"/>
            <field name="view" ref="ebay_seller_account_view_form"/>
            <field name="act_window" ref="act_ebay_seller_account_form"/>
        </record>
        <record model="ir.action.act_window.view"
                id="act_ebay_seller_account_view2">
            <field name="sequence" eval="10"/>
            <field name="view" ref="ebay_seller_account_view_tree"/>
            <field name="act_window" ref="act_ebay_seller_account_form"/>
        </record>
        <menuitem id="ebay" sequence="50" name="eBay"/>
        <menuitem parent="ebay"
            action="act_ebay_seller_account_form"
            id="menu_ebay_seller_account"
            sequence="0" icon="tryton-list"/>

        <!--Check Token Status Wizard-->
        <record model="ir.action.wizard" id="check_token_status">
            <field name="name">Check Token Status</field>
            <field name="wiz_name">ebay.check_token_status</field>
            <field name="model">ebay.seller.account</field>
        </record>

        <record model="ir.ui.view" id="check_token_status_view_form">
            <field name="model">ebay.check_token_status.view</field>
            <field name="type">form</field>
            <field name="name">wizard_check_token_status_view_form</field>
        </record>

        <!--Import orders wizard-->
        <record model="ir.action.wizard" id="import_orders">
            <field name="name">Import Orders</field>
            <field name="wiz_name">ebay.import_orders</field>
            <field name="model">ebay.seller.account</field>
        </record>

        <record model="ir.ui.view" id="import_orders_view_form">
            <field name="model">ebay.import_orders.view</field>
            <field name="type">form</field>
            <field name="name">wizard_import_orders_view_form</field>
        </record>

        <!--Export Inventory wizard-->
        <record model="ir.action.wizard" id="export_catalog_inventory">
            <field name="name">Export Inventory Status</field>
            <field name="wiz_name">ebay.export_catalog_inventory</field>
            <field name="model">ebay.seller.account</field>
        </record>
        <record model="ir.ui.view" id="export_catalog_inventory_start">
            <field name="model">ebay.export_catalog_inventory.start</field>
            <field name="type">form</field>
            <field name="name">wizard_export_catalog_inventory_start_form</field>
        </record>
        <record model="ir.ui.view" id="export_catalog_inventory_done">
            <field name="model">ebay.export_catalog_inventory.done</field>
            <field name="type">form</field>
            <field name="name">wizard_export_catalog_inventory_done_form</field>
        </record>

        <!--Export Catalog wizard-->
        <record model="ir.action.wizard" id="export_catalog">
            <field name="name">Export Catalog</field>
            <field name="wiz_name">ebay.export_catalog</field>
            <field name="model">ebay.seller.account</field>
        </record>
        <record model="ir.ui.view" id="export_catalog_start">
            <field name="model">ebay.export_catalog.start</field>
            <field name="type">form</field>
            <field name="name">wizard_export_catalog_start_form</field>
        </record>
        <record model="ir.ui.view" id="export_catalog_done">
            <field name="model">ebay.export_catalog.done</field>
            <field name="type">form</field>
            <field name="name">wizard_export_catalog_done_form</field>
        </record>

        <!-- Cron To Import Sale Orders-->
        <record model="ir.cron" id="ir_cron_import_ebay_sale_orders">
            <field name="name">Import Sales from eBay</field>
            <field name="request_user" ref="res.user_admin"/>
            <field name="user" ref="res.user_trigger"/>
            <field name="active" eval="True"/>
            <field name="interval_number">1</field>
            <field name="interval_type">days</field>
            <field name="number_calls">-1</field>
            <field name="model">ebay.seller.account</field>
            <field name="function">import_orders_cron</field>
        </record>

    </data>
</tryton>
